<h1>Listar Sistemas Operativos</h1>

<table class="table table-striped table-bordered table">
  <tr>
    <th>Nombre</th>
    <th>Version</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @systems.each do |system| %>
  <tr>
    <td><%= system.nombre %></td>
    <td><%= system.version %></td>
    <td><%= link_to 'Show', system %></td>
    <td><%= link_to 'Edit', edit_system_path(system) %></td>
    <td><%= link_to 'Destroy', system, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nuevo Sistema Operativo', new_system_path, class: 'btn btn-primary' %>
